# no built-in rules please
.SUFFIXES:

DIR=build
QEMU_X64=qemu-x86_64-static

$(info $(shell mkdir -p $(DIR)))
TESTS = fib.asm \
        fib_debug.asm \
        cmp.asm \
        reg_torture.asm \
        reg_torture_f32.asm \
        fp_op.asm \
        multiple_results_f64.asm \
        multiple_results_f32.asm \
        switch.asm indirect.64.asm \
        multiple_results.asm \
        memaddr.64.asm \
        stack.asm \
        int_op.asm \
        queens.64.asm \
        stack.asm \
        pfannkuchen.64.asm

TEST_C_EXES = $(TESTS:%.asm=$(DIR)/%.asm.c.exe)

STD_LIB_NO_ARGV = ../StdLib/startup_no_argv.x64.asm ../StdLib/syscall.x64.asm ../StdLib/std_lib.64.asm
STD_LIB_WITH_ARGV = ../StdLib/startup.x64.asm ../StdLib/syscall.x64.asm ../StdLib/std_lib.64.asm


# flaky
# $(DIR)/threads.x64.asm.exe

tests: $(DIR)/isel_test_c $(DIR)/codegen_parity $(TEST_C_EXES)
	@echo "[OK C++ CodeGenX64]"



############################################################
# Code Gen
############################################################

isel_gen.cc: isel_tab.py
	@echo "[$@]"
	$(PYPY) ./isel_tab.py gen_c <$@ > $(DIR)/$@.tmp
	@mv $(DIR)/$@.tmp $@

isel_gen.h: isel_tab.py
	@echo "[$@]"
	$(PYPY) ./isel_tab.py gen_h <$@ > $(DIR)/$@.tmp
	@mv $(DIR)/$@.tmp $@

isel_gen_patterns.h: isel_tab.py ../Base/opcode_tab.py
	@echo "[$@]"
	$(PYPY) ./isel_tab.py gen_patterns_h >$@

GENERATED = isel_gen.cc isel_gen.h isel_gen_patterns.h
############################################################
# C++
############################################################
BUILD_DIR=../../build
CODEGEN_TOOL=$(BUILD_DIR)/x64_codegen_tool.exe

$(CODEGEN_TOOL)::
	@cd $(BUILD_DIR); $(MAKE) -s x64_codegen_tool.exe

$(DIR)/%.asm.c.exe: ../TestData/%.asm $(CODEGEN_TOOL)
	@echo "[integration $@]"
	$(CODEGEN_TOOL) -mode binary $(STD_LIB_NO_ARGV) $< $@ >$@.out
	@chmod a+rx $@
	${QEMU_X64} $@ > $@.actual.out
	diff $@.actual.out $<.golden


$(DIR)/isel_test_c: isel_gen.h isel_gen.cc
	@echo "[integration $@]"
	@cd $(BUILD_DIR); $(MAKE) -s x64_isel_tester.exe
	$(BUILD_DIR)/x64_isel_tester.exe < TestData/codegen_test.asm  > $@.actual.out
	diff $@.actual.out TestData/codegen_test.asm.golden

############################################################
# Parity
############################################################

TEST_MODE = normal
#TEST_MODE = legalize
#TEST_MODE = reg_alloc_global
#TEST_MODE = reg_alloc_local
#TEST_MODE = binary

# ensure identical output when emitting textual assembly between
# python and c++ implementations
$(DIR)/codegen_parity: isel_gen.h isel_gen.cc $(CODEGEN_TOOL)
	@echo "[$@]"
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/parse_real_test.64.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/parse_real_test.64.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/fib.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/fib.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/threads.64.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/threads.64.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/int_op.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/int_op.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/cmp.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/cmp.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/queens.64.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/queens.64.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/reg_torture.asm  $@.out
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/reg_torture.asm $@_c.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/multiple_results_f64.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/multiple_results_f64.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/multiple_results_f32.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/multiple_results_f32.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/stack.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/stack.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/switch.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/switch.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/memaddr.64.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/memaddr.64.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/reg_torture_f32.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_NO_ARGV) ../TestData/reg_torture_f32.asm $@.out
	diff $@_c.out $@.out
	@echo
	$(CODEGEN_TOOL) -mode $(TEST_MODE) $(STD_LIB_WITH_ARGV) ../TestData/nano_jpeg.64.asm $@_c.out
	$(PYPY) ./codegen.py -mode $(TEST_MODE) $(STD_LIB_WITH_ARGV) ../TestData/nano_jpeg.64.asm $@.out
	diff $@_c.out $@.out

clean:
	rm -f $(DIR)/* $(CODEGEN_TOOL)
